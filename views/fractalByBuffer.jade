extends layout

block content
    link(rel='stylesheet', href='/stylesheets/fractal.css')
    .flex
        .side.test
            .wrap
                .text
                    .header Depth
                    .val 10
                input(type="range", name="depth", min = "2", max = "7", step="1")
            .wrap
                .text
                    .header Number of starting branch
                    .val
                input(type="range", name="startingBranchNum", min = "4", max = "6", step="1")
            .wrap
                .text
                    .header Number of branch
                input(type="range", name="branchNum", min = "2", max = "6", step="1")
            .wrap
                .text
                    .header Length
                input(type="range", name="length", min = "0.6", max = "1.3", step="0.1")
            .wrap
                .text
                    .header Angle of branch
                input(type="range", name="branchAngle", min = "20", max = "90", step="1")
            .color-wrap
                .text
                    .header Start Color
                input(type="color", name="startColor", value="#5041ff")
            .color-wrap
                .text
                    .header End Color
                input(type="color", name="endColor", value="#fff840")

            .btn.gen-btn Generate
            .btn.delete-btn Delete
        .renderer

    script(src="/component/fractal.js")
    script(src="/component/fractalByBuffer.js")
    script(src="/fractalController.js")

